<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
        <input class="inputName form-control" <%= f.text_field :name, autofocus: true, id:"inputName" %>
      </div>
      <div class="form-group">
        <label for="inputImage">Image</label>
        <input class="inputImage form-control-file" <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="inputIntroduction">Introduction</label>
        <textarea class="inputIntroduction form-control"  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %>
      </div>

        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>