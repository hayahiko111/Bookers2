<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book ,method: :patch do |f| %>
      <label for="book_title">Title</label>
      <input class="form-control book_title" <%= f.text_field :title %>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <textarea class="form-control book_opinion" <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <input  class="btn btn-success" <%= f.submit 'Update Book' %>
      </div>
      <% end %>
        <%= link_to "Show", book_path(@book.id) %>
